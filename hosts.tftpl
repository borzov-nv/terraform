[all:vars]
ansible_user=ubuntu
ansible_ssh_private_key_file=~/.ssh/id_rsa
ansible_ssh_common_args='-o ProxyJump=ubuntu@${bastion_ip} -o StrictHostKeyChecking=no'
zabbix_ip=${zabbix_ip}

[bastion]
bastion ansible_host=${bastion}

[webservers]
%{ for vm in web_nodes ~}
${vm.name} ansible_host=${vm.fqdn}
%{ endfor ~}

[monitoring]
zabbix ansible_host=${zabbix}
kibana ansible_host=${kibana}
elasticsearch ansible_host=${elasticsearch}