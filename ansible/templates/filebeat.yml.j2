filebeat.inputs:
- type: filestream
  enabled: false
  paths:
    - /var/log/*.log

filebeat.config.modules:
  path: ${path.config}/modules.d/*.yml
  reload.enabled: false

setup.kibana:
  host: "kibana.ru-central1.internal:5601"
  username: "elastic"
  password: "{{ elastic_password }}"

output.elasticsearch:
  hosts: ["elasticsearch.ru-central1.internal:9200"]
  username: "elastic"
  password: "{{ elastic_password }}"

setup.dashboards.enabled: true

filebeat.modules:
- module: nginx
  access:
    enabled: true
  error:
    enabled: true
